<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sap_input_layout_product_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/sap__product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                 android:hint="Product Name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/sap_input_layout_quantity"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/sap_input_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="number"
                android:hint="Shopping List Name" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sap_add_product"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Add"/>

            <Button
                android:id="@+id/sap_dismiss"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:text="Dismiss"/>

        </LinearLayout>

    </LinearLayout>